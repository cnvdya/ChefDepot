<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fooddepot.activity.cook.CookProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_pic"/>

            <Button
                android:id="@+id/profilepic_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_img"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:text="Upload Your Picture"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>



            <TextView
                android:id="@+id/name_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profilepic_btn"
                android:textColor="@color/textColor"
                android:text="Name"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/name_edtxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/profile_img"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/phone_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/name_txtvw"
                android:textColor="@color/textColor"
                android:text="Phone No."
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/phone_edtxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/phone_txtvw"
                android:layout_alignRight="@+id/name_edtxt"
                android:layout_marginLeft="56dp"
                android:layout_toRightOf="@+id/phone_txtvw"
                android:textAlignment="center"

                />



            <TextView
                android:id="@+id/adrsline1_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/phone_txtvw"
                android:layout_alignLeft="@+id/name_txtvw"
                android:text="Address Line1"
                android:textColor="@color/textColor"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/adrsline1_edtxt"
                android:layout_width="200dp"
                android:layout_alignBaseline="@id/adrsline1_txtvw"
                android:layout_alignLeft="@+id/phone_editxt"
                android:layout_alignRight="@+id/name_edtxt"
                android:layout_height="wrap_content"
                android:hint="  Street, Apartment name"
                android:background="@drawable/edittextbg" />

            <TextView
                android:id="@+id/adrsline2_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/adrsline1_txtvw"
                android:layout_alignLeft="@+id/name_txtvw"
                android:text="Address Line2"
                android:textColor="@color/textColor"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/adrsline2_edtxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/adrsline2_txtvw"
                android:layout_alignLeft="@+id/phone_editxt"
                android:layout_alignRight="@+id/name_edtxt"
                android:hint="  Apartment Number"
                android:background="@drawable/edittextbg" />

            <TextView
                android:id="@+id/email_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/adrsline2_edtxt"
                android:layout_alignLeft="@+id/name_txtvw"
                android:text="Email"
                android:textColor="@color/textColor"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/email_edtxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/email_txtvw"
                android:layout_alignRight="@+id/name_edtxt"
                android:hint="  myemail@gmail.com "
                android:background="@drawable/edittextbg" />

            <TextView
                android:id="@+id/state_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/email_txtvw"
                android:layout_alignLeft="@+id/name_txtvw"
                android:text="State"
                android:textColor="@color/textColor"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/cntry_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignBaseline="@+id/state_txtvw"
                android:layout_toRightOf="@+id/state_txtvw"
                android:layout_marginLeft="80dp"
                android:text="Country"
                android:textColor="@color/textColor"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/zip_txtvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignBaseline="@+id/state_txtvw"
                android:layout_alignRight="@+id/name_edtxt"
                android:text="Zip Code"
                android:textColor="@color/textColor"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/state_edtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_txtvw"
                android:layout_alignLeft="@+id/name_txtvw"

                android:hint=" State"
                android:background="@drawable/edittextbg" />



            <EditText
                android:id="@+id/cntry_edtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/state_edtxt"
                android:layout_alignLeft="@+id/cntry_txtvw"
                android:hint=" Country"
                android:background="@drawable/edittextbg" />



            <EditText
                android:id="@+id/zip_edtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignBaseline="@id/state_edtxt"
                android:layout_alignRight="@+id/name_edtxt"
                android:hint=" Zip Code"
                android:background="@drawable/edittextbg" />



            <Button
                android:id="@+id/saveProfile_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/state_edtxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="  Save  "
                android:background="@color/savebtn"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/orderList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View My Orders"
                android:layout_below="@+id/saveProfile_btn"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"/>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
